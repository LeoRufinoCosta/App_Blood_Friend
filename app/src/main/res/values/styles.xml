<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_text_full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/cinza_escuro</item>
    </style>

    <style name="edit_text_bg">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/cinza_escuro</item>
    </style>

    <style name="edit_text_bg2">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">13dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/sangue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">13dp</item>
        <item name="android:background">@drawable/button_2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ButtonBusca">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/sangue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinner_full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">17dp</item>
    </style>

    <style name="spinner_busca">
        <item name="android:textColor">@color/sangue</item>
    </style>

    <style name="icon_center" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>


</resources>

